<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="400.0" minWidth="600.0" style="-fx-border-color: #FF7E85;" stylesheets="@../CSSs/ModalForm.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #FF7E85;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="40.0" style="-fx-background-color: #FF7E85;">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <children>
                  <MaterialDesignIconView fill="WHITE" glyphName="INFORMATION" size="40" />
                  <Label prefHeight="50.0" prefWidth="171.0" text="Item Details" textFill="WHITE">
                     <font>
                        <Font name="Microsoft JhengHei" size="18.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <VBox minHeight="360.0" spacing="20.0" style="-fx-background-color: #FFFFFF;">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <JFXTextField fx:id="txtItemCode" editable="false" focusColor="#ff7e85" labelFloat="true" promptText="Item Code" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtItemName" editable="false" focusColor="#ff7e85" labelFloat="true" prefHeight="25.0" prefWidth="430.0" promptText="Description" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <JFXTextField fx:id="txtPrice" editable="false" focusColor="#ff7e85" labelFloat="true" prefWidth="100.0" promptText="Price" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtAddons" editable="false" focusColor="#ff7e85" labelFloat="true" prefWidth="80.0" promptText="Add-ons" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtQuantity" focusColor="#ff7e85" labelFloat="true" prefWidth="80.0" promptText="Quantity" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtDiscount" focusColor="#ff7e85" labelFloat="true" prefWidth="80.0" promptText="Discount" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtDiscPrct" focusColor="#ff7e85" labelFloat="true" prefWidth="80.0" promptText="Discount %" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                        <JFXTextField fx:id="txtTotal" editable="false" focusColor="#ff7e85" labelFloat="true" prefWidth="135.0" promptText="Total" unFocusColor="#ff7e85">
                           <font>
                              <Font name="Microsoft JhengHei" size="12.0" />
                           </font>
                        </JFXTextField>
                     </children>
                  </HBox>
                  <TableView fx:id="tblItemAssembly" prefHeight="200.0">
                     <VBox.margin>
                        <Insets top="-15.0" />
                     </VBox.margin>
                  </TableView>
                  <HBox alignment="BOTTOM_RIGHT" spacing="5.0">
                     <children>
                        <JFXButton fx:id="btnUpdate" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #0f9d58; -fx-background-radius: 10px;" text="Update" textFill="WHITE">
                           <font>
                              <Font name="Microsoft JhengHei" size="18.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnCancel" cancelButton="true" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff7e85; -fx-background-radius: 10px;" text="Back" textFill="WHITE">
                           <font>
                              <Font name="Microsoft JhengHei" size="18.0" />
                           </font>
                        </JFXButton>
                     </children>
                     <VBox.margin>
                        <Insets top="-12.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
